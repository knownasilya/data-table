{{data-table-bin columns=columnsNotInHeader viewName='binComponent'}}
<table class="table table-responsive table-hover table-condensed">
  <thead>
    {{view dataTableHeader viewName='columnCollection'}}
  </thead>
  <tbody>
    {{#each row in data}}
      <tr>
        {{#if selectable}}
          <td>{{input type='checkbox'}}</td>
        {{/if}}

        {{#each row}}
          <td>{{this}}</td>
        {{/each}}
      </tr>
    {{/each}}
  </tbody>
</table>
